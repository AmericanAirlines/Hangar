    "@mikro-orm/knex": "^6.0.0-dev",
    "@mikro-orm/postgresql": "^6.0.0-dev",
    "@slack/bolt": "^3.11.0",
    "@slack/web-api": "^6.6.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.3.0",
    "mikro-orm": "^6.0.0-dev",
    "readline-sync": "^1.4.10",
    "winston": "^3.3.3"
