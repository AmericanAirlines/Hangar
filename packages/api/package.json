{
  "name": "@hangar/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --exit-child --watch .env.local --ignore-watch ../web/.next  --files --respawn src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.build.json --pretty",
