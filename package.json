{
  "name": "hangar",
  "version": "2.0.0",
  "description": "One stop for all the tools hackathon sponsors need",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmericanAirlines/Hangar.git"
  },
  "authors": [
    "John Kahn <john.kahn@aa.com>",
    "Spencer Kaiser <spencer.kaiser@aa.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AmericanAirlines/Hangar/issues"
  },
  "homepage": "https://github.com/AmericanAirlines/Hangar#readme",
  "scripts": {
    "setup": "lerna run --scope=@hangar/web build:server",
    "dev": "lerna run --scope=@hangar/api dev --stream",
    "start": "lerna run --scope=@hangar/api start",
    "build": "lerna run build --stream",
    "migrate": "lerna run migrate --stream",
    "typecheck": "lerna run typecheck --concurrency=1 --stream --no-bail",
    "lint": "lerna run lint --concurrency=1 --stream --no-bail",
    "lint:fix": "lerna run lint:fix --concurrency=1 --stream --no-bail",
    "prettier": "prettier -cu \"**/*\"",
    "prettier:fix": "yarn prettier --write",
    "test": "lerna run test --concurrency=1 --stream --no-bail",
    "test:coverage": "lerna run test:coverage --concurrency=1 --stream --no-bail",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "patch-package": "^6.4.7"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.4.0",
    "pretty-quick": "^3.1.1"
  }
}
