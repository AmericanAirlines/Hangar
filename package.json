{
  "name": "hangar",
  "version": "1.0.0",
  "description": "One stop for all the tools hackathon sponsors need",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -l build -p build:watch start:watch",
    "start": "node dist/index.js",
    "start:watch": "nodemon -w dist -e js dist/index.js",
    "build": "tsc -p src/ --pretty",
    "build:watch": "npm run build -- -w",
    "build:ci": "run-s lint build test",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "checkstyle": "prettier -l src/**/*.ts",
    "checkstyle:fix": "npm run checkstyle -- --write",
    "test": "jest",
    "test:changed": "jest -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmericanAirlines/Hangar.git"
  },
  "authors": [
    "John Kahn <john.kahn@aa.com>",
    "Spencer Kaiser <spencer.kaiser@aa.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AmericanAirlines/Hangar/issues"
  },
  "homepage": "https://github.com/AmericanAirlines/Hangar#readme",
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s build lint:staged test"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.{js,ts}": [
        "npm run checkstyle:fix",
        "npm run lint:fix",
        "git add"
      ]
    },
    "ignore": [
      "**/*.test.ts"
    ]
  },
  "nodemonConfig": {
    "delay": "400"
  },
  "dependencies": {
    "@slack/bolt": "^1.4.1",
    "@slack/types": "^1.2.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "typescript": "^3.3.3333",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.20",
    "@types/node": "^11.15.0",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.21.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0"
  }
}
